{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Package tasks",
      "command": "./run",
      "args": ["${input:commandPackage}", "${input:package}"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Repo tasks",
      "command": "./run ${input:commandRepo}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Package: format, lintfix, test",
      "command": "./run format ${input:package} && ./run lintfix ${input:package} && ./run test ${input:package}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "package",
      "description": "Package",
      "options": [
        "all",
        "clock",
        "errutil",
        "httpclient",
        "httpflush",
        "httprecoverer",
        "httproundtrip",
        "identifier",
        "jsonutil",
        "logging",
        "misc",
        "reflectutil"
      ],
      "default": ""
    },
    {
      "type": "pickString",
      "id": "commandPackage",
      "description": "Package Commands",
      "options": ["lint", "lint-fix", "format", "test", "build"],
      "default": ""
    },
    {
      "type": "pickString",
      "id": "commandRepo",
      "description": "Repo Commands",
      "options": ["ci", "format-configs", "spellcheck-docs", "setup", "test-scripts", "tag", "generate-mocks", "coverage"],
      "default": ""
    }
  ]
}
