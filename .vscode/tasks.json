{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Module tasks",
      "command": "./run",
      "args": ["${input:commandModule}", "${input:module}"],
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": { "panel": "shared" },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Repo tasks",
      "command": "./run ${input:commandRepo}",
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": { "panel": "shared" },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Module: format, lintfix, test",
      "command": "./run format ${input:module} && ./run lintFix ${input:module} && ./run test ${input:module}",
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": { "panel": "shared" },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "module",
      "description": "Module",
      "default": "",
      "options": [
        "all",
        "clock",
        "cmd/ci",
        "cmd/copyright",
        "cmd/filer",
        "cmd/gengowork",
        "cmd/genvscodetasks",
        "cmd/runner",
        "httpmisc",
        "hue",
        "identifier",
        "jsonutil",
        "logging",
        "misc"
      ]
    },
    {
      "type": "pickString",
      "id": "commandModule",
      "description": "Module Commands",
      "default": "",
      "options": ["build", "format", "lint", "test"]
    },
    {
      "type": "pickString",
      "id": "commandRepo",
      "description": "Repo Commands",
      "default": "",
      "options": [
        "ci",
        "copyright",
        "format-configs",
        "generate-go-work",
        "generate-mocks",
        "generate-vscode-tasks",
        "new-module",
        "setup",
        "spellcheck"
      ]
    }
  ]
}
