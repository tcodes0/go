{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Module tasks",
      "command": "./run",
      "args": ["${input:commandModule}", "${input:module}"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Repo tasks",
      "command": "./run ${input:commandRepo}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Module: format, lintfix, test",
      "command": "./run format ${input:module} && ./run lintfix ${input:module} && ./run test ${input:module}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "module",
      "description": "Module",
      "options": ["all", "clock", "httpmisc", "hue", "identifier", "jsonutil", "logging", "misc"],
      "default": ""
    },
    {
      "type": "pickString",
      "id": "commandModule",
      "description": "Module Commands",
      "options": ["build", "format", "lint", "lintFix", "tests"],
      "default": ""
    },
    {
      "type": "pickString",
      "id": "commandRepo",
      "description": "Repo Commands",
      "options": [
        "ci",
        "ciPush",
        "coverage",
        "formatConfigs",
        "generateMocks",
        "spellcheckDocs",
        "setup",
        "tag",
        "testScripts",
        "generateGoWork",
        "newModule",
        "generateVscodeTasks",
        "copyright"
      ],
      "default": ""
    }
  ]
}
